    "depth_first_traversal.cc",
    "depth_first_traversal.h",
    "error_code.h",
    "error_data.cc",
    "error_data.h",
    "error_reporter.cc",
    "error_reporter.h",
    "error_sink.cc",
    "error_sink.h",
    "factory.cc",
    "factory.h",
    "factory_user.cc",
    "factory_user.h",
    "formatters/text_formatter.cc",
    "formatters/text_formatter.h",
    "function.cc",
    "function.h",
    "nodes.cc",
    "nodes.h",
    "nodes_forward.h",
    "node_factory.cc",
    "node_factory.h",
    "node_factory_user.cc",
    "node_factory_user.h",
    "node_printers.cc",
    "node_printers.h",
    "node_visitor.cc",
    "node_visitor.h",
    "optimizer_export.h",
    "sequence_id_source.cc",
    "sequence_id_source.h",
    "thing.h",
    "thing_printer.cc",
    "types.cc",
    "types.h",
    "types_forward.h",
