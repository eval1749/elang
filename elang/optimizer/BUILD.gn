source_set("optimizer_test_support") {
  testonly = true
  sources = [
    "testing/optimizer_test.cc",
    "testing/optimizer_test.h",
  ]
  public_deps = [
    "//testing/gtest",
    "//elang/base",
    ":optimizer",
  ]
}

source_set("optimizer_tests") {
  testonly = true
}

test("elang_optimizer_tests") {
  sources = [
    "function_test.cc",
    "nodes_test.cc",
    "types_test.cc",
  ]
  deps = [
    "//base/test:run_all_unittests",
    ":optimizer_test_support",
  ]
}
