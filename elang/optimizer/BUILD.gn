import("//testing/test.gni")

component("optimizer") {
  visibility = [ "*" ]
  output_name = "elang_optimizer"
  sources = [
    "depth_first_traversal.cc",
    "depth_first_traversal.h",
    "editor.cc",
    "editor.h",
    "error_code.h",
    "error_data.cc",
    "error_data.h",
    "error_reporter.cc",
    "error_reporter.h",
    "error_sink.cc",
    "error_sink.h",
    "factory.cc",
    "factory.h",
    "factory_user.cc",
    "factory_user.h",
    "formatters/graphviz_formatter.cc",
    "formatters/graphviz_formatter.h",
    "formatters/text_formatter.cc",
    "formatters/text_formatter.h",
    "function.cc",
    "function.h",
    "node_cache.cc",
    "node_cache.h",
    "node_factory.cc",
    "node_factory.h",
    "node_factory_user.cc",
    "node_factory_user.h",
    "node_printers.cc",
    "node_printers.h",
    "node_visitor.cc",
    "node_visitor.h",
    "nodes.cc",
    "nodes.h",
    "nodes_forward.h",
    "opcode.h",
    "optimizer_export.h",
    "sequence_id_source.cc",
    "sequence_id_source.h",
    "thing.h",
    "thing_printer.cc",
    "type_factory.cc",
    "type_factory.h",
    "type_factory_user.cc",
    "type_factory_user.h",
    "type_printers.cc",
    "type_visitor.cc",
    "type_visitor.h",
    "types.cc",
    "types.h",
    "types_forward.h",
    "validator.cc",
    "validator.h",
  ]

  defines = [ "OPTIMIZER_IMPLEMENTATION" ]

  deps = [
    "scheduler",
  ]

  public_deps = [
    "//base",
    "//elang/api",
    "//elang/base",
  ]
}

source_set("test_support") {
  visibility = [ ":*" ]
  testonly = true
  sources = [
    "testing/optimizer_test.cc",
    "testing/optimizer_test.h",
  ]
  public_deps = [
    ":optimizer",
    "//testing/gtest",
    "//elang/api",
    "//elang/base",
  ]
}

source_set("test_files") {
  visibility = [ ":*" ]
  testonly = true
  sources = [
    "editor_test.cc",
    "function_test.cc",
    "nodes_test.cc",
    "scheduler/scheduler_test.cc",
    "types_test.cc",
  ]
  deps = [
    ":test_support",
  ]
}

test("tests") {
  output_name = "elang_optimizer_tests"
  visibility = [ "//elang:tests" ]
  deps = [
    ":test_files",
    "//base/test:run_all_unittests",
  ]
}
