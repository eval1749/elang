component("hir") {
  output_name = "elang_hir"
  sources = [
    "editor.cc",
    "editor.h",
    "factory.cc",
    "factory.h",
    "factory_config.h",
    "formatters/text_formatter.cc",
    "formatters/text_formatter.h",
    "hir_export.h",
    "instructions.cc",
    "instructions.h",
    "instruction_factory.cc",
    "instruction_factory.h",
    "intrinsic_names.cc",
    "intrinsic_names.h",
    "types.cc",
    "types.h",
    "type_factory.cc",
    "type_factory.h",
    "type_visitor.cc",
    "type_visitor.h",
    "values.cc",
    "values.h",
    "values_forward.h",
    "value_visitor.cc",
    "value_visitor.h",
  ]

  defines = [ "HIR_IMPLEMENTATION" ]

  deps = [
    "//base",
    "//elang/base",
  ]
}

source_set("hir_test") {
  testonly = true
  sources = [
    "testing/hir_test.cc",
    "testing/hir_test.h",
  ]
  public_deps = [
    ":hir",
    "//testing/gtest",
  ]
}

source_set("hir_unittests") {
  testonly = true
  sources = [
    "instructions_unittest.cc",
    "types_unittest.cc",
    "values_unittest.cc",
  ]
  public_deps = [
    "//testing/gtest",
    ":hir_test",
  ]
}

test("elang_hir_unittests") {
  deps = [
    "//base/test:run_all_unittests",
    ":hir_unittests",
  ]
}
