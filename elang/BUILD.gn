import("//elang/build/elang_target_arch.gni")
import("//testing/test.gni")

group("elang") {
  deps = [
    "//elang/optimizer",
    "//elang/shell",
    "//elang/vm",
  ]
}

group("elang_target_arch") {
  public_configs = [ ":elang_target_arch_config" ]
}

config("elang_target_arch_config") {
  if (elang_target_arch == "x64") {
    defines = [ "ELANG_TARGET_ARCH_X64" ]
  }
}

test("elang_all_tests") {
  deps = [
    "//base/test:run_all_unittests",
    "//elang/base:base_tests",
    "//elang/cg:cg_tests",
    "//elang/hir:hir_tests",
    "//elang/lir:lir_tests",
    "//elang/shell:shell_tests",
    "//elang/targets:targets_tests",
    "//elang/vm:vm_tests",
  ]
}
